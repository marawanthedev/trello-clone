generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CardStatus {
  PENDING
  INPROGRESS
  DONE
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  Card  Card[]
}

model Card {
  id      Int        @id @default(autoincrement())
  content String
  status  CardStatus
  author  User       @relation(fields: [userId], references: [id])
  userId  Int
}
